<script>
    /*1. Написать функцию, преобразующую число в объект. Передавая на вход число от 0 до 999,
    мы должны получить на выходе объект, в котором в соответствующих свойствах описаны единицы,
    десятки и сотни. Например, для числа 245 мы должны получить следующий объект:
    {‘единицы’: 5, ‘десятки’: 4, ‘сотни’: 2}. Если число превышает 999,
    необходимо выдать соответствующее сообщение с помощью console.log и вернуть пустой объект.*/

    function convertingToAnObject(number) {
        let numericObject = {
            'единицы': 0,
            'десятки': 0,
            'сотни': 0,
        };
        if (number >= 0 && number <= 999) {
            numericObject['единицы'] = Math.floor(number % 10);
            numericObject['десятки'] = Math.floor(number / 10 % 10);
            numericObject['сотни'] = Math.floor(number / 100 % 10);
        } else {
            number = 0;
            console.log('Вы ввели число не в диапозоне 0 - 999');
        }
        console.log(numericObject);
    }

    number = +prompt('Введите число от 0 до 999')
    convertingToAnObject(number)

</script>
</body>
